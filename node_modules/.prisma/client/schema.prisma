datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Group {
  id          String   @id @default(uuid())
  name        String
  description String
  isPublic    Boolean
  password    String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  posts       Post[]
  badges      Badge[]
}

model Post {
  id      String @id @default(uuid())
  title   String
  content String
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])
}

model Badge {
  id          String @id @default(uuid())
  name        String
  description String
  groupId     String
  group       Group  @relation(fields: [groupId], references: [id])
}
